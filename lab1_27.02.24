def arithmetic_operation(operation):
    if operation == "+":
        return lambda x, y: x + y
    if operation == "-":
        return lambda x, y: x - y
    if operation == "*":
        return lambda x, y: x * y
    if operation == "/":
        return lambda x, y: x / y
    else:
        return print("Неверная операция")
operation = arithmetic_operation("+")
print(operation(1, 4))

